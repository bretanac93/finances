            <form id="form" action="{{ path('user_edit', {'id': entity.id}) }}" method="POST">

                
                <div class="form-group">
                    <label class="form-label">Nombre</label>
                    <span class="help">e.g. "Jorge"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="first_name" name="first_name" required="required" class="form-control" value="{{ entity.firstName }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Apellidos</label>
                    <span class="help">e.g. "Perez Castilla"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="last_name" name="last_name" required="required" class="form-control" value="{{ entity.lastName }}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Nombre de usuario</label>
                    <span class="help">e.g. "jorge.perez"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="username" name="username" required="required" class="form-control" value="{{ entity.username }}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Correo electr√≥nico</label>
                    <span class="help">e.g. "jorge@domain.com"</span>
                    <div class="input-with-icon  right">
