{% set active = 'usuarios' %}

{% extends 'layout2.html.twig' %}

{% block body %}
<div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="page-title">
                <h3>Perfil de usuario</h3>
            </div>
            {% include 'AppBundle:partials:flash_messages.html.twig' %}
            <div class="col-xs-12">
              <ul class="nav nav-tabs" id="tab-01">
                <li class="active"><a href="#edit-profile">Editar Perfil</a></li>
                <li><a href="#change-password">Cambiar contraseña</a></li>
              </ul>
              <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
              <div class="tab-content">
                <div class="tab-pane active" id="edit-profile">
                  <div class="row">
                    <form id="form" action="{{ path('user_profile') }}" method="POST">
                        <div class="form-group">
                            <label class="form-label">Nombre</label>
                            <span class="help">e.g. "Jorge"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="text" id="first_name" name="first_name" required="required" class="form-control" value="{{ app.user.firstName }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Apellidos</label>
                            <span class="help">e.g. "Perez Castilla"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="text" id="last_name" name="last_name" required="required" class="form-control" value="{{ app.user.lastName }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Nombre de usuario</label>
                            <span class="help">e.g. "jorge.perez"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="text" id="username" name="username" required="required" class="form-control" value="{{ app.user.username }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Correo electrónico</label>
                            <span class="help">e.g. "jorge@domain.com"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="text" id="email" name="email" required="required" class="form-control" value="{{ app.user.email }}">
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="pull-right">
                                <input type="submit" value="Actualizar" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                            </div>
                        </div>
                    </form>
                  </div>
                </div>
                <div class="tab-pane" id="change-password">
                  <div class="row">
                    <form action="{{ path('user_change_password') }}" method="POST" class="fos_user_change_password">
                        <div class="form-group">
                            <label class="form-label">Contraseña actual</label>
                            <span class="help">e.g. "old_password"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="password" id="old_password" name="old_password" required="required" class="form-control" value="">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Nueva contraseña</label>
                            <span class="help">e.g. "new_password"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="password" id="new_password" name="new_password" required="required" class="form-control" value="">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Repetir contraseña</label>
                            <span class="help">e.g. "new_password"</span>
                            <div class="input-with-icon  right">
                                <i class=""></i>
                                <input type="password" id="repeat_password" name="repeat_password" required="required" class="form-control" value="">
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="pull-right">
                                <input type="submit" value="Actualizar" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                            </div>
                        </div>
                    </form>

                  </div>
                </div>
                
              </div>
            </div>

            
        </div>
    </div>
{% endblock %}