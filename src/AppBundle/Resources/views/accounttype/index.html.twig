{% set active = '' %}

{% extends 'layout2.html.twig' %}

{% block body %}
  <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

        <div class="page-title">
            <h3>Tipos de Cuenta</h3>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="add-new">
                <a href="{{ path('accounttype_new') }}" title=""><i class="fa fa-plus"><span id="icon-new">Crear Nuevo</span></i></a>
            </div>
        {% endif %}    
        <table class="table table-hover no-more-tables">
        
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Balance Exigido</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            {% for accountType in accountTypes %}
            <tbody>
                <tr>
                    <td>{{ accountType.id }}</td>
                    <td>{{ accountType.name }}</td>
                    <td>{{ accountType.requiredBalance }}</td>
                    <td><a href="{{ path('accounttype_edit',{ 'id':accountType.id }) }}"><i class="fa fa-pencil" id="edit_pencil"></i></a>

                    <a href="{{ path('accounttype_delete',{ 'id':accountType.id }) }}"><i class="fa fa-times" id="delete_times"></i></a>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
        
        </div>
    </div>
{% endblock %}
