{% set active = 'grupo cuentas' %}

{% extends 'layout2.html.twig' %}

{% block body %}
<div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">
            
                <div class="page-title">
                    <h3>Nuevo Cuenta</h3>
                </div>
            
            
            <form id="form" action="{{ path('accounttype_new') }}" method="POST">

                <div class="form-group">
                    <label class="form-label">Nombre</label>
                    <span class="help">e.g. "Bienes y Derechos"</span>
                    <div class="input-with-icon right">
                        <i class=""></i>
                        <input type="text" id="appbundle_accounttype_name" name="name" required="required" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Balance</label>
                    <span class="help">e.g. "Positivo"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <select id="appbundle_accounttype_required_balance" name="required_balance" class="select2 form-control">
                            <option value="Positivo">Positivo</option>
                            <option value="Negativo">Negativo</option>
                            </select>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="pull-right">
                        <input type="submit" value="Crear" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                    </div>
                </div>
            </form>


        </div>
    </div>
{% endblock %}
