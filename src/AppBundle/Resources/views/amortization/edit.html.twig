{% extends 'layout2.html.twig' %}

{% block body %}
<div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="page-title">
                <h3>Editar Cuenta Amortizacion</h3>
            </div>

            <form id="form" action="{{ path('amortization_edit',{'id':amortization.id}) }}" method="POST">

                <div class="form-group">
                    <label class="form-label">Cuenta de Amortizacion</label>
                    <span class="help">e.g. "Balance Genral"</span>
                    <div class="  right">
                        <i class=""></i>
                        <select id="appbundle_amortization_amortizationAccount" name="amortizationAccount" class="select2 form-control">

                            {% for childAccount in childAccounts %}

                                <option value="{{ childAccount.id }}">
                                    {{ childAccount.name }}
                                </option>
                            {% endfor %}
                            </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Planificado</label>
                    <span class="help">e.g. "250,000,000"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="appbundle_amortization_amount" name="planned"
                        required="required" value="{{ amortization.planned }}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Total de Amortizacion</label>
                    <span class="help">e.g. "250,000,000"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="appbundle_amortization_totalAmortization" name="totalAmortization" placeholder="AutoGenerado" required="required" class="form-control" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Total de Excedente</label>
                    <span class="help">e.g. "250,000,000"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="appbundle_amortization_totalExcessive" name="totalExcessive" placeholder="AutoGenerado" required="required" class="form-control" disabled>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="pull-right">
                        <input type="submit" value="Crear" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                    </div>
                </div>
            </form>


        </div>
    </div>
{% endblock %}
