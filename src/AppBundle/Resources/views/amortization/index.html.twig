{% extends 'layout2.html.twig' %}

{% block body %}
  <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

        <div class="page-title">
            <h3>Amortizaciones</h3>
        </div>

        <div class="add-new">
            <a href="{{ path('amortization_new') }}" title=""><i class="fa fa-plus"><span id="icon-new">Crear Cuenta de Amortizaciones</span></i></a>
        </div>

        <table class="table table-hover no-more-tables">
        
            <thead>
                <tr>
                    <th>#</th>
                    <th>Amortizacion</th>
                    <th>Planificado</th>
                    <th>Total de Amortizacion</th>
                    <th>Total de Excedente</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            {% for amortization in amortizations %}
            <tbody>
                <tr>
                    <td>{{ amortization.id }}</td>
                    <td>{{ amortization.amortizationAccount }}</td>
                    <td>{{ amortization.planned }}</td>
                    <td>{{ amortization.totalAmortization }}</td>
                    <td>{{ amortization.totalExcessive }}</td>
                    <td><a href="{{ path('amortization_edit',{ 'id':amortization.id }) }}"><i class="fa fa-pencil" id="edit_pencil"></i></a>

                    <a href="{{ path('amortization_delete',{ 'id':amortization.id }) }}"><i class="fa fa-times" id="delete_times"></i></a>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
        
        </div>
    </div>
{% endblock %}
