{% extends 'layout2.html.twig' %}

{% block body %}
  <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

        <div class="page-title">
            <h3>Cuentas Hijas</h3>
        </div>

        <div class="add-new">
            <a href="{{ path('childaccount_new') }}" title=""><i class="fa fa-plus"><span id="icon-new">Crear Nuevo</span></i></a>
        </div>

        <table class="table table-hover no-more-tables">
        
            <thead>
                <tr>
                    <th>#</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Cuenta Madre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            {% for childAccount in childAccounts %}
            <tbody>
                <tr>
                    <td>{{ childAccount.id }}</td>
                    <td>{{ childAccount.code }}</td>
                    <td>{{ childAccount.name }}</td>
                    <td>{{ childAccount.matrixAccount }}</td>
                    
                    <td><a href="{{ path('childaccount_edit',{ 'id':childAccount.id }) }}"><i class="fa fa-pencil" id="edit_pencil"></i></a>

                    <a href="{{ path('childaccount_delete',{ 'id':childAccount.id }) }}"><i class="fa fa-times" id="delete_times"></i></a>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
        
        </div>
    </div>
{% endblock %}
