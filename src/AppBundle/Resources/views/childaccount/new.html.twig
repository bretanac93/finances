{% set active = 'grupo cuentas' %}

{% extends 'layout2.html.twig' %}

{% block body %}
<div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="page-title">
                <h3>Nueva Cuenta Hija</h3>
            </div>

            <form id="form" action="{{ path('childaccount_new') }}" method="POST">

                <div class="form-group">
                    <label class="form-label">Codigo</label>
                    
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="appbundle_childaccount_code" name="code" required="required" class="form-control" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Name</label>
                    
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="appbundle_childaccount_name" name="name" required="required" class="form-control" disabeled>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Razon de Salida</label>
                    <span class="help">e.g. "Salario Neto"</span>
                    <div class="  right">
                        <i class=""></i>
                        
                        <select id="appbundle_debit_withdrawalReason" name="matrixAccount" class="select2 form-control">
                        {% for matrixAccount in matrixAccounts %}
                            <option value="{{ matrixAccount.id }}">
                                {{ matrixAccount.name }}
                            </option>
                        {% endfor %}
                        </select>
                        
                    </div>
                </div>
            
                <div class="form-actions">
                    <div class="pull-right">
                        <input type="submit" value="Crear" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                    </div>
                </div>
            </form>


        </div>
    </div>
{% endblock %}
