{% set active = 'saldo inicial' %}

{% extends 'layout2.html.twig' %}

{% block body %}
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here </div>
        </div>
        <div class="clearfix"></div>
        <div class="content">
            <div class="row-fluid">
                <div class="span12">
                    <div class="grid simple ">
                        <div class="grid-title">
                            <h4>Deudas</h4>
                            <div class="add-new">
                                <a href="{{ path('debt_new') }}"><i class="fa fa-plus"><span id="icon-new">Crear Nuevo</span></i></a>
                            </div>
                            <!--<div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>-->
                        </div>
                        <div class="grid-body">
                            <table id="example" class="table table-striped table-bordered nowrap mydatatable" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Cuenta de Deudas y Amortizaciones</th>
                                    <th>Saldo Inicial</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for debt in debts %}
                                    <tr>
                                        <td>{{ debt.id }}</td>
                                        <td>{{ debt.debtAmortizationAccount }}</td>
                                        <td>{{ debt.openingBalance }}</td>
                                        <td>
                                            <a href="{{ path('debt_edit', { 'id': debt.id }) }}"><i class="fa fa-pencil edit_pencil"></i></a>
                                            <a href="{{ path('debt_delete', { 'id': debt.id }) }}"><i class="fa fa-times delete_times"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}






















