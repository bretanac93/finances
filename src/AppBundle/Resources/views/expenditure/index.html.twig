{% set active = 'plan financiero' %}

{% extends 'layout2.html.twig' %}

{% block body %}
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here </div>
        </div>
        <div class="clearfix"></div>
        <div class="content">
            <div class="row-fluid">
                <div class="span12">
                    <div class="grid simple ">
                        <div class="grid-title">
                            <h4>Gastos</h4>
                            <!--<div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>-->
                            <div class="add-new btn btn-primary">
                                <a href="{{ path('expenditure_new') }}"><i class="fa fa-plus"><span id="icon-new">Crear Nuevo</span></i></a>
                            </div>
                        </div>

                        <div class="grid-body">

                            <table id="example" class="table table-striped table-bordered nowrap mydatatable" cellspacing="0" width="100%">

                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Cuenta de Gasto</th>
                                    <th>Planificado</th>
                                    <th>Total de Gasto</th>
                                    <th>Total de Excedente</th>
                                    <th>SubTotal de Excedente</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for expenditure in expenditures %}

                                    <tr>
                                        <td>{{ expenditure.id }}</td>
                                        <td>{{ expenditure.expenditureAccount }}</td>
                                        <td>{{ expenditure.planned }}</td>
                                        <td>{{ expenditure.totalExpenditure }}</td>
                                        <td>{{ expenditure.totalExcessive }}</td>
                                        <td>{{ expenditure.subTotalExcessive }}</td>
                                        <td><a href="{{ path('expenditure_edit',{ 'id':expenditure.id }) }}"><i class="fa fa-pencil edit_pencil"></i></a>
                                            <a href="{{ path('expenditure_delete',{ 'id':expenditure.id }) }}"><i class="fa fa-times delete_times"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}