{% set active = 'plan financiero' %}

{% extends 'layout2.html.twig' %}

{% block body %}
<div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="page-title">
                <h3>Editar Ingreso</h3>
            </div>
            <form id="form" method="post" action="{{ path('income_edit', {'id': income.id}) }}">
                <div class="form-group">
                    <label class="form-label">Entrada de Efectivo</label>
                    <span class="help">e.g. "Balance Genral"</span>
                    <div class="  right">
                        <i class=""></i>

                        <select id="appbundle_icome_cashEntry" name="cashEntry" class="select2 form-control">
                            {% for childAccount in childAccounts %}
                                    <option value="{{ childAccount.id }}">
                                        {{ childAccount.name }}
                                    </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Razon de Entrada</label>
                    <span class="help">e.g. "Salario Neto"</span>
                    <div class="  right">
                        <i class=""></i>
                        <select id="appbundle_income_entryReason" name="entryReason" class="select2 form-control">
                            {% for childAccount in childAccounts %}

                                    <option value="{{ childAccount.id }}">
                                        {{ childAccount.name }}
                                    </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Importe</label>
                    <span class="help">e.g. "250,000,000"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <input type="text" id="appbundle_income_amount" name="amount" required="required" class="form-control" value="{{ income.amount }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Breve Descripcion</label>
                    <span class="help">e.g. "Mi Cheque"</span>
                    <div class="input-with-icon  right">
                        <i class=""></i>
                        <textarea id="appbundle_income_briefDescription" name="briefDescription" required="required" class="form-control">{{ income.briefDescription }}</textarea>
                        
                    </div>
                </div>
                <div class="form-actions">
                    <div class="pull-right">
                        <input type="submit" value="Editar" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
