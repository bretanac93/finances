{% set active = 'grupo cuentas' %}

{% extends 'layout2.html.twig' %}

{% block body %}
<div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="page-title">
                <h3>Nueva Cuenta Madre</h3>
            </div>

            <form id="form" action="{{ path('matrixaccount_new') }}" method="POST">

                
                <div class="form-group">
                    <label class="form-label">Codigo</label>
                    <span class="help">e.g. "1"</span>
                    <div class="input-with-icon right">
                        <i class=""></i>
                        <input type="text" id="appbundle_matrixaccount_code" name="code" required="required" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Nombre</label>
                    <span class="help">e.g. "1"</span>
                    <div class="input-with-icon right">
                        <i class=""></i>
                        <input type="text" id="appbundle_matrixaccount_name" name="name" required="required" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Grupo de Cuenta</label>
                    <span class="help">e.g. "Cuentas de Cheque"</span>
                    <div class="input-with-icon right">
                        <i class=""></i>
                        <select id="account_type" name="account_type" class="select2 form-control">
                        {% for accountType in accountTypes %}

                                <option value="{{ accountType.id }}">
                                    {{ accountType.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="pull-right">
                        <input type="submit" value="Crear" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                    </div>
                </div>
            </form>


        </div>
    </div>
{% endblock %}

