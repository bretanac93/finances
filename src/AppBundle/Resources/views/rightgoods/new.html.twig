{% set active = 'saldo inicial' %}

{% extends 'layout2.html.twig' %}

{% block body %}
    <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

            <div class="page-title">
                <h3>Nuevo Bienes y Derechos</h3>
            </div>

            {{ form_start(form,{'attr':{'id':'form','data-toggle':'validator','role':'form'}}) }}

                <div class="form-group">
                    <label class="form-label">Cuenta Hija</label>
                    <span class="help">e.g. "Del Grupo de Bienes y Derechos"</span>
                    <div class="  right">
                        <i class=""></i>
                        {{ form_widget(form.account) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Saldo Inicial</label>
                    <span class="help">e.g. "250,000,000"</span>
                    <div class="  right">
                        <i class=""></i>
                        <div class="help-block with-errors"></div>
                        {{ form_widget(form.openingBalance,{'attr':{ 'pattern':'^[0-9]{1,}$','data-error':'Debe escribir el Saldo Inicial.','data-validate':'true'}}) }}

                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Total de Bienes y Derechos</label>
                    <span class="help">e.g. "250,000,000"</span>
                    <div class="  right">
                        <i class=""></i>
                        <input type="text" placeholder="AutoGenerado" class="form-control" disabled>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="pull-right">
                        <input type="submit" value="Crear" class="btn btn-success btn-cons"><i class="icon-ok"></i>
                    </div>
                </div>

            {{ form_end(form) }}


        </div>
    </div>
{% endblock %}












