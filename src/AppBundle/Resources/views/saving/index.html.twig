{% extends 'layout2.html.twig' %}

{% block body %}
  <div class="page-content">
        <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <div id="portlet-config" class="modal hide">
            <div class="modal-header">
                <button data-dismiss="modal" class="close" type="button"></button>
                <h3>Widget Settings</h3>
            </div>
            <div class="modal-body"> Widget settings form goes here</div>
        </div>
        <div class="clearfix"></div>
        <div class="content">

        <div class="page-title">
            <h3>Ahorros</h3>
        </div>

        <div class="add-new">
            <a href="{{ path('saving_new') }}" title=""><i class="fa fa-plus"><span id="icon-new">Crear Cuenta de Ahorro</span></i></a>
        </div>

        <table class="table table-hover no-more-tables">
        
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cuenta de Ahorro</th>
                    <th>Planificado</th>
                    <th>Total de Ahorro</th>
                    <th>Balance</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            {% for saving in savings %}
            <tbody>
                <tr>
                    <td>{{ saving.id }}</td>
                    <td>{{ saving.savingAccount }}</td>
                    <td>{{ saving.planned }}</td>
                    <td>{{ saving.totalSaving }}</td>
                    <td>{{ saving.balance }}</td>
                    <td><a href="{{ path('saving_edit',{ 'id':saving.id }) }}"><i class="fa fa-pencil" id="edit_pencil"></i></a>

                    <a href="{{ path('saving_delete',{ 'id':saving.id }) }}"><i class="fa fa-times" id="delete_times"></i></a>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
        
        </div>
    </div>
{% endblock %}
