{% set active = 'plan financiero' %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Saving</h1>

    <table>
        <tbody>
            <tr>
                <th>Savingaccount</th>
                <td>{{ saving.savingAccount }}</td>
            </tr>
            <tr>
                <th>Planned</th>
                <td>{{ saving.planned }}</td>
            </tr>
            <tr>
                <th>Totalsaving</th>
                <td>{{ saving.totalSaving }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ saving.balance }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ saving.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('saving_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('saving_edit', { 'id': saving.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
